<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/user_login_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">


    <RelativeLayout
        android:id="@id/user_login_rlyt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            android:id="@id/user_login_rlyt_title_bar"
            layout="@layout/rlyt_title_bar" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dip"
        android:scaleType="fitXY"
        android:src="@drawable/ic_reg_login_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dip"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@id/login_or_register_imgv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16.0dip"
            android:layout_marginTop="36.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_biaobiao_logo" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_divider" />

        <LinearLayout
            android:id="@id/user_login_rlyt_account"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/list_item_top_selector"
            android:paddingLeft="21.0dip"
            android:paddingRight="16.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="24.0dip"
                android:src="@drawable/ic_reg_login_account" />

            <EditText
                android:id="@id/user_login_edt_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/lucency_white"
                android:hint="@string/user_login_account_tips"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/deep_grey"
                android:textColorHint="@color/lightest_grey"
                android:textSize="18.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/list_item_middle_selector"
            android:paddingLeft="22.0dip"
            android:paddingRight="16.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="28.0dip"
                android:src="@drawable/ic_reg_login_pwd" />

            <EditText
                android:id="@id/user_login_edt_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/lucency_white"
                android:hint="@string/user_login_password_tips"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/deep_grey"
                android:textColorHint="@color/lightest_grey"
                android:textSize="18.0dip" />
        </LinearLayout>

        <Button
            android:id="@id/user_login_btn_login"
            style="@style/general_green_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="12.0dip"
            android:text="登录" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:gravity="center"
            android:text="使用国科大教务系统账号登录"
            android:textColor="@color/hint"
            android:textSize="14.0dip" />
    </LinearLayout>

    <!--<RelativeLayout
        android:id="@id/user_login_rlyt_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dip">




    </RelativeLayout>-->
</RelativeLayout>